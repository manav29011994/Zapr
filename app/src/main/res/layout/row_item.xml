<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        card_view:cardCornerRadius="10dp">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/imv1"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="3dp"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imv1"
            android:layout_toLeftOf="@+id/imv2"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="ngforonrorro"
            />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/imv2"
            android:layout_marginTop="15dp"
            android:src="@drawable/play_play"
            android:background="#ffffff"
            android:layout_toLeftOf="@+id/imv3"
            />
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/imv3"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/download"
            />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/imv1"/>

         <TextView
             android:padding="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/view"
             android:textSize="10sp"
             android:text="oihfeifepfppr"
             android:singleLine="true"
             android:ellipsize="end"
             android:layout_toLeftOf="@+id/addtoplaylist"
             android:layout_marginLeft="10dp"
             android:id="@+id/tv2"/>

        <ImageView
            android:visibility="gone"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:id="@+id/addtoplaylist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>